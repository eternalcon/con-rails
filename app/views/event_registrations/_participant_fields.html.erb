<div class="row align-items-end nested-fields">
  <div class="col-sm">
    <%= f.input :first_name %> 
  </div>
  <div class="col-sm">
    <%= f.input :last_name %> 
  </div>
  <div class="col-sm">
    <%= f.input :birthdate, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year, use_short_month: true %>
  </div>
  <div class="col-sm">
    <%= f.input :nickname, required: false %> 
  </div>
  <div class="col-sm">
    <%= f.input :country, priority: ["DE", "GB", "FR"] %>
  </div>
  <div class="col-sm">
    <%= f.input :postcode %>
  </div>
  <div class="col-sm">
    <%= link_to_remove_association t(:remove_participant), f, html_options: '"data-turbolinks="false"' %>
  </div>

</div>
