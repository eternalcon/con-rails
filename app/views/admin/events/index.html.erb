<h1>Admin Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Maximum Participants</th>
      <th>Full Price</th>
      <th>Youth Price</th>
      <th>Child Price</th>
      <th>Status</th>
      <th colspan=3></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_events.each do |admin_event| %>
      <tr>
        <td><%= admin_event.name %></td>
        <td><%= admin_event.start_date %></td>
        <td><%= admin_event.end_date %></td>
        <td><%= admin_event.max_participants %></td>
        <td><%= admin_event.full_price %></td>
        <td><%= admin_event.youth %></td>
        <td><%= admin_event.child %></td>
        <td><%= admin_event.status %></td>
        <td><%= link_to 'Registrations for the Event', admin_event_event_registrations_path(admin_event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(admin_event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(admin_event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

