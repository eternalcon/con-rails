<% if @registration.errors.size > 0 -%>
  <div class="alert alert-danger" role="alert">
    <% @registration.errors.full_messages.each do |msg| %>
      <%= msg %>
      <% end -%>
    </div>
<% end %>

<%= form_for(:registration, url: freeform_registrations_path(freeform_id: @freeform), remote: true, html: { class: 'form-horizontal' } ) do |f| %>
  
  <div class="form-group">
    <%= label_tag(:name, FreeformRegistration.human_attribute_name("name"), class: 'col-sm-2 control-label') %>
    <div class="col-sm-9">
      <%= text_field :registration, :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:email, Participant.human_attribute_name("email"), class: 'col-sm-2 control-label') %>
    <div class="col-sm-9">
      <%= text_field :registration, :email, type: 'email', class: 'form-control' -%>
    </div>
  </div>
  <div class="form-group" style="margin-top: 15px;">
    <%= label_tag(:notes, Registration.human_attribute_name("notes"), class: 'col-sm-2 control-label') %>
    <div class="col-sm-9">
      <%= f.text_area :notes, size: '100x10', class: 'form-control' -%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-3 col-sm-offset-5">
      <%= recaptcha_tags %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit t(:btn_registration), class: "btn btn-lg btn-default", value: t(:btn_registration) -%>
  </div>
<% end %>
