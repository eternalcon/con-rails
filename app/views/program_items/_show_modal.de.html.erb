
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="ProgramnItemShowTitle"><%= @program_item.title %></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2>Beschreibung in Deutsch</h2>
        <% if @program_item.description_de == nil || @program_item.description_de.empty? %>
          Keine Beschreibung in deutscher Sprache angegeben.
        <% else %>
          <%= @program_item.description_de %>
        <% end %>
        <h2>Beschreibung in Englisch</h2>
        <% if @program_item.description_en == nil || @program_item.description_en.empty? %>
          Keine Beschreibung in Englisch verfügbar.
        <% else %>
          <%= @program_item.description_de %>
        <% end %>
        <h2>Geplante Anfangszeit:</h2>
        <%= @program_item.start_time %>
        <h2>Ungefähre Dauer:</h2>
        <%= @program_item.duration %>
        <h2>Sprache:</h2>
        <%= @program_item.language %>
        <h2>Mindestalter:</h2>
        <%= @program_item.min_age %>
        <h2>Mindest-Spieleranzahl:</h2>
        <%= @program_item.min_player_count %>
        <h2>Maximale Spieleranzahl:</h2>
        <%= @program_item.max_player_count %>
      </div>
      <div class="modal-footer">
        <% if can? :manage, @program_item %>
          <%= link_to 'Ändern', edit_event_program_item_path( @program_item.event_id, @program_item), class: "btn btn-primary" %>
        <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
      </div>
    <div>
  </div>
