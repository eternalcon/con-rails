<%= simple_form_for(@participant ) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :street %>
    <%= f.input :postcode %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :birthdate, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year %>
    <%= f.input :newsletter %>
    <%= recaptcha_tags %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
