<div id="FreeformCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h3><%= @event.freeforms.first.name %></h3>
      <h4>Freeform für <%= @event.freeforms.first.min_participants %> bis <%= @event.freeforms.first.max_participants %> Teilnehmer zwischen <%= @event.freeforms.first.min_age %> und <%= @event.freeforms.first.max_age %> Jahren.</h4>
      <strong>Language: <%= @event.freeforms.first.language %></strong>
      <p>
        <%=raw @event.freeforms.first.send("description_#{I18n.locale}") %>
      </p>
      <p>
        <%= link_to "Details / Anmeldung", event_freeform_path(@event, @event.freeforms.first) %>
      </p>
    </div>
    <% @event.freeforms.each do |freeform| %>
      <div class="carousel-item">
        <h3><%= freeform.name %></h3>
        <h4>Freeform für <%= freeform.min_participants %> bis <%= freeform.max_participants %> Teilnehmer zwischen <%= freeform.min_age %> und <%= freeform.max_age %> Jahren.</h4>
        <strong>Language: <%= freeform.language %></strong>
        <p>
          <%=raw freeform.send("description_#{I18n.locale}") %>
        </p>
        <p>
          <%= link_to "Details / Anmeldung", event_freeform_path(@event, freeform) %>
        </p>
      </div>
    <% end %>
  </div>
</div>
