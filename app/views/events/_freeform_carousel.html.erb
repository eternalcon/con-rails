<div id="FreeformCarousel" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @event.freeforms.each do |freeform| %>
    <% if freeform.id == 1 %>
      <div class="carousel-item active">
    <% else %>
      <div class="carousel-item">
    <% end %>
        <h3><%= freeform.name %></h3>
        <h4>Freeform for <%= freeform.min_participants %> to <%= freeform.max_participants %> Participants between <%= freeform.min_age %> and <%= freeform.max_age %>   years.</h4>
        <strong>Language: <%= freeform.language %></strong>
        <p>
          <%=raw freeform.send("description_#{I18n.locale}") %>
        </p>
        <p>
          <%= link_to "Details / Registration", event_freeform_path(@event, freeform) %>
        </p>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#FreeformCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#FreeformCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
